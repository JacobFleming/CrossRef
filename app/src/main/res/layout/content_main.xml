<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.colinfrerichs.crossref.MainActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinBook"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/spinner_outline" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/spinChapter"
        android:layout_toRightOf="@+id/spinBook"
        android:background="@drawable/spinner_outline" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/spinVerse"
        android:layout_toRightOf="@+id/spinChapter"
        android:background="@drawable/spinner_outline" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reference"
        android:id="@+id/btnSendReference"
        android:layout_below="@+id/spinBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@drawable/roundedbuttons"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbuttons"
        android:text="Verse Inbox"
        android:id="@+id/btnInbox"
        android:layout_below="@+id/btnSendReference"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />
</RelativeLayout>
